{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 22 },
  "configurePresets": [
    {
      "name": "dev",
      "displayName": "Dev (Debug, Ninja)",
      "generator": "Ninja",
      "binaryDir": "build/dev",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_PREFIX_PATH": "/opt/homebrew",
        "Python_EXECUTABLE": "$env{VIRTUAL_ENV}/bin/python",
        "Python3_EXECUTABLE": "$env{VIRTUAL_ENV}/bin/python",
        "Python_ROOT_DIR": "$env{VIRTUAL_ENV}",
        "BUILD_BENCHMARKS": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release (Ninja)",
      "generator": "Ninja",
      "binaryDir": "build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_PREFIX_PATH": "/opt/homebrew",
        "Python_EXECUTABLE": "/usr/bin/python3",
        "BUILD_BENCHMARKS": "ON"
      }
    }
  ],
  "buildPresets": [
    { "name": "dev", "configurePreset": "dev" },
    { "name": "release", "configurePreset": "release" }
  ]

}
